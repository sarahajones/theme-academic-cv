@incollection{maniscalco_signal_2014,
	address = {Berlin, Heidelberg},
	title = {Signal {Detection} {Theory} {Analysis} of {Type} 1 and {Type} 2 {Data}: {Meta}-d′, {Response}-{Specific} {Meta}-d′, and the {Unequal} {Variance} {SDT} {Model}},
